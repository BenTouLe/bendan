@model LoginViewModel
@{
    ViewData["Title"] = "用户登陆";
}

<div class="row">
    <div class="col-md-8">
        <h5>用户登陆</h5>
        <br>
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewBag.ReturnUrl" method="post" class="form-horizontal" role="form">
            <div class="form-group row">
                <label asp-for="UserName" class="col-md-2 control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="UserName" class="form-control" required />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Password" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Password" class="form-control" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-offset-2 col-md-10">
                    <div class="checkbox">
                        <input asp-for="RememberMe" />
                        <label asp-for="RememberMe"></label>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-2">
                    <input class="btn btn-primary" type="submit" value="登陆">
                </div>
                <div class="col-md-10">
                    <a asp-action="Register" class="float-right">注册</a>
                </div>
            </div>
            <p>
                <a asp-action="ForgotPassword">忘记了密码?</a>
            </p>
        </form>
    </div>

    <div class="col-md-4">
     
        <h5>使用社交账号登陆</h5>
    
    </div>
</div>

